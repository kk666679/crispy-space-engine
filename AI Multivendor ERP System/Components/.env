# === Database Configuration ===
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/erp

# === Authentication ===
# Secret key for signing JWT tokens
JWT_SECRET=your_jwt_secret

# === Payment Gateway ===
# Stripe secret key for processing payments
STRIPE_SECRET_KEY=your_stripe_secret_key

# === Email Service ===
# Email credentials for nodemailer
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# === Server Configuration ===
# Server port number
PORT=5000
# Environment (e.g., development, production)
NODE_ENV=development

# REACT_APP_API_URL
REACT_APP_API_URL=http://localhost:5000

# AWS S3 Configuration
AWS_REGION=your-aws-region
PERSONALIZE_CAMPAIGN_ARN=your-campaign-arn

# AWS SNS Configuration
# SNS topic ARN for order notifications
AWS_REGION=your-aws-region
ORDER_NOTIFICATION_TOPIC_ARN=your-sns-topic-arn

# STRIPE Configuration
# Stripe secret key for payment processing
STRIPE_SECRET_KEY=your-stripe-secret-key
AWS_REGION=your-aws-region
PAYMENT_NOTIFICATION_QUEUE_URL=your-sqs-queue-url

# Virtual Assistant Configuration
PORT=3000
NODE_ENV=development

# Halal API Configuration
PORT=3000
HALAL_API_KEY=your_api_key_here

